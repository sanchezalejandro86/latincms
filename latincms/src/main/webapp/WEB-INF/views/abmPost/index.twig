{% extends "../admin.twig" %}

{% block main_admin %}
<div>
	<a class="btn btn-primary" href="#/admin/abm/post/nuevo">A&ntilde;adir Nuevo</a><br />
	<br />
	<table st-table="posts" class="table table-striped">
		<thead>
			<tr>
				<th>T&iacute;tulo</th>
				<th>Autor</th>
				<th>Comentarios</th>
				<th>Fecha</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="post in posts">
				<td><a href="#/admin/abm/post/">{% verbatim %}{{post.titulo}}{% endverbatim %}</td>
				<td>{% verbatim %}{{post.usuario.username}}{% endverbatim %}</td>
				<td><a href="#/admin/abm/comentarios">{% verbatim %}{{post.comentarios.length}}{% endverbatim %}</a></td>
				<td>{% verbatim %}{{post.fecha}}{% endverbatim %}</td>
				<td>
					<a href=""><i class="fa fa-pencil"></i> </a>
					<a href="" ng-click="deletePost(post.id)"><i class="fa fa-times"></i> </a>
					<a href="#/post/{% verbatim %}{{post.id}}{% endverbatim %}"><i class="fa fa-file-o"></i> </a>
				</td>
			</tr>
		</tbody>
	</table>
</div>
{% endblock %}